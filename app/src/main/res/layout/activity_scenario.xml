<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scenario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="makisp.gohome.ScenarioActivity"
    android:background="@drawable/papyros">

    <TextView
        android:text="@string/scenario_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/scenario_title"
        android:textColorLink="?attr/colorPrimaryDark"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="normal|bold|italic"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif" />

    <TextView
        android:text="@string/scenario_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scenario_story"
        android:fontFamily="serif"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textSize="24sp"
        android:layout_marginTop="34dp"
        android:width="300dp"
        android:layout_below="@+id/scenario_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/button_choice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_choice2"
        android:layout_marginBottom="142dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_choice1"
        android:layout_toEndOf="@+id/button_choice1"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="@string/button_choice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_choice1"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignBaseline="@+id/button_choice2"
        android:layout_alignBottom="@+id/button_choice2"
        android:layout_alignLeft="@+id/scenario_story"
        android:layout_alignStart="@+id/scenario_story"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        style="@style/Widget.AppCompat.Button.Colored" />

</RelativeLayout>
